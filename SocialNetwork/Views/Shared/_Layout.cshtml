<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Social Network</title>
    <link rel="stylesheet" href="~/webpack/css/index.css"/>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="mainHeader">
        <a href="@Url.Action("Index","Home")" class="logo">MySN</a>
        <nav class="navbar">
            <a href="@Url.Action("Index","Home")">Main</a>
            <a href="@Url.Action("MakePost","Home")">Make post</a>
            <a href="@Url.Action("AdminOnly","Test")">Admin only</a>
            @if (User.Identity.IsAuthenticated)
            {
                <a href="@Url.Action("Register","Account")">@User.Identity.Name</a>
                <a href="@Url.Action("Logout","Account")">Logout</a>
            }
            else{
                <a href="@Url.Action("Login","Account")">Login</a>
                <a href="@Url.Action("Register","Account")">Register</a>
            }
        </nav>
        <input type="text" placeholder="Search..." class="searchBar"/>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div>
            &copy; 2023 - MySN
        </div>
    </footer>
    <script src="~/webpack/index.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
